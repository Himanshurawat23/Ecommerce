<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>

<!-- Hero Banner Section -->
<section class="hero bg-dark text-white py-5 text-center">
  <div class="container">
    <h1 class="display-4">Welcome to Our Product Store</h1>
    <p class="lead">Find the best products hand-picked just for you!</p>
    <a href="#products" class="btn btn-primary btn-lg">Shop Now</a>
  </div>
</section>

<!-- Featured Products Section -->
<div class="container mt-5" id="products">
  <h2 class="text-center mb-4 text-uppercase font-weight-bold">Our Featured Products</h2>
  <div class="row">
    <% for(let item of products){ %>
    <div class="col-lg-4 col-md-6 mb-4">
      <!-- Product Card with Hover Effect -->
      <div class="card shadow-sm h-100 product-card">
        <img src="<%=item.img%>" class="card-img-top img-fluid" alt="<%=item.name%>" style="height: 250px; object-fit: cover;">
        <div class="card-body">
          <h5 class="card-title text-primary font-weight-bold"><%=item.name%></h5>
          <h6 class="text-success mb-2">$<%=item.price%></h6>
          <p class="card-text"><%=item.desc.length > 100 ? item.desc.substring(0, 100) + '...' : item.desc %></p>
          <a href="/products/<%=item._id%>" class="btn btn-info btn-block mb-2">View Product</a>
          <% if(currentUser && currentUser.role === 'seller'){%>
          <form action="/products/<%=item._id%>?_method=DELETE" method="POST" class="d-inline">
            <button class="btn btn-danger btn-block">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

<!-- Custom Footer Section -->
<footer class="bg-dark text-white py-5 mt-5">
  <div class="container">
    <div class="row">
      <!-- About Us Section -->
      <div class="col-md-4 mb-3">
        <h5>About Us</h5>
        <p>We are your go-to store for the finest products available. Our goal is to provide quality at affordable prices with fast shipping and excellent customer service.</p>
      </div>

      <!-- Quick Links Section -->
      <div class="col-md-4 mb-3">
        <h5>Quick Links</h5>
        <ul class="list-unstyled">
          <li><a href="/about" class="text-white">About</a></li>
          <li><a href="/contact" class="text-white">Contact</a></li>
          <li><a href="/faq" class="text-white">FAQs</a></li>
          <li><a href="/privacy" class="text-white">Privacy Policy</a></li>
        </ul>
      </div>

      <!-- Social Media Section -->
      <div class="col-md-4 mb-3">
        <h5>Follow Us</h5>
        <p>Stay connected with us on social media:</p>
        <a href="#" class="text-info me-3">
          <i class="fab fa-facebook fa-lg"></i>
        </a>
        <a href="#" class="text-info me-3">
          <i class="fab fa-instagram fa-lg"></i>
        </a>
        <a href="#" class="text-info me-3">
          <i class="fab fa-twitter fa-lg"></i>
        </a>
        <a href="#" class="text-info">
          <i class="fab fa-linkedin fa-lg"></i>
        </a>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col text-center">
        <p>&copy; <%= new Date().getFullYear() %> Product Store. All Rights Reserved.</p>
      </div>
    </div>
  </div>
</footer>

<!-- Custom CSS -->
<style>
  /* Hero Section Styles */
  .hero {
    background-image: url('https://via.placeholder.com/1200x400');
    background-size: cover;
    background-position: center;
    position: relative;
  }
  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
  }
  .hero h1, .hero p, .hero a {
    position: relative;
    z-index: 1;
  }

  /* Product Card Hover Effect */
  .product-card:hover {
    transform: scale(1.05);
    transition: transform 0.3s ease-in-out;
  }

  /* Footer Styles */
  footer {
    background-color: #1a1a1a;
  }
  footer h5 {
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }
  footer a {
    color: #17a2b8;
    text-decoration: none;
  }
  footer a:hover {
    color: #fff;
    text-decoration: underline;
  }
  footer ul {
    padding-left: 0;
  }
  footer ul li {
    list-style: none;
    margin-bottom: 0.5rem;
  }

  /* Social Media Icons */
  .fa-facebook, .fa-instagram, .fa-twitter, .fa-linkedin {
    transition: color 0.3s ease;
  }
  .fa-facebook:hover { color: #4267B2; }
  .fa-instagram:hover { color: #C13584; }
  .fa-twitter:hover { color: #1DA1F2; }
  .fa-linkedin:hover { color: #0077B5; }

  /* Section Title Styling */
  h2 {
    color: #343a40;
    font-family: 'Arial', sans-serif;
    letter-spacing: 2px;
  }
</style>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
